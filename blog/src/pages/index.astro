---
/**
 * 홈페이지 - MDX 포스트와 DB 포스트를 통합 표시
 * SSR 모드로 동작하여 DB 포스트를 동적으로 로드
 */
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import DbPostCard from '../components/DbPostCard.astro';
import { siteConfig } from '../config';
import { getPublishedPosts } from '../lib/posts-repository';
import type { Post } from '../lib/db-schema';

// MDX 포스트 (non-draft)
const mdxPosts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// DB 포스트 (published)
let dbPosts: Post[] = [];
try {
  dbPosts = await getPublishedPosts();
} catch (error) {
  // DB 연결 실패 시 빈 배열 (개발 환경에서 DB 없이도 동작)
  console.warn('Failed to fetch DB posts:', error);
}

// 통합 포스트 목록 (날짜순 정렬)
type UnifiedPost =
  | { type: 'mdx'; post: CollectionEntry<'posts'>; date: Date }
  | { type: 'db'; post: Post; date: Date };

const allPosts: UnifiedPost[] = [
  ...mdxPosts.map((post) => ({
    type: 'mdx' as const,
    post,
    date: post.data.pubDate,
  })),
  ...dbPosts.map((post) => ({
    type: 'db' as const,
    post,
    date: new Date(post.pub_date),
  })),
].sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout title={siteConfig.title} description={siteConfig.description}>
  <main class="home">
    <section class="hero">
      <h1 class="hero-title">Tech Blog</h1>
      <p class="hero-description">
        AnimFlow를 활용한 인터랙티브 기술 블로그입니다.
        복잡한 시스템의 동작을 시각적으로 이해하기 쉽게 설명합니다.
      </p>
    </section>

    <section class="posts-section">
      <h2 class="section-title">최근 포스트</h2>
      {allPosts.length === 0 ? (
        <p class="no-posts">아직 포스트가 없습니다.</p>
      ) : (
        <div class="posts-grid">
          {allPosts.map((item) =>
            item.type === 'mdx' ? (
              <PostCard post={item.post} />
            ) : (
              <DbPostCard post={item.post} />
            )
          )}
        </div>
      )}
    </section>
  </main>
</BaseLayout>

<style>
  .home {
    max-width: var(--layout-page-width, 1200px);
    margin: 0 auto;
    padding: 2rem 1rem;
    font-size: var(--layout-font-size, 1rem);
    line-height: var(--layout-line-height, 1.6);
  }

  .hero {
    text-align: center;
    padding: 3rem 1rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: var(--color-text);
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .posts-section {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(
      var(--layout-grid-columns, auto-fill),
      minmax(min(var(--layout-grid-min, 320px), 100%), 1fr)
    );
    gap: var(--layout-gap, 1.5rem);
  }

  .no-posts {
    text-align: center;
    color: var(--color-text-secondary);
    padding: 2rem;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 2rem 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
